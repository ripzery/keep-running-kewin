<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/reload_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:src="@drawable/reload_btn"
            android:scaleType="centerInside"
            android:background="@drawable/trans_round_btn" />

        <ImageButton
            android:id="@+id/shoot_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:src="@drawable/shoot_btn"
            android:scaleType="centerInside"
            android:background="@drawable/trans_round_btn" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/weapon_selector"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_margin="20dp">

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_rectangle"
            android:layout_gravity="left"/>

        <View
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"/>

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_rectangle"
            android:layout_gravity="right"/>
    
   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        </LinearLayout>-->

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/weapon_btn"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <com.oakraw.testmagnetic.custom.TextViewBullet
                    android:id="@+id/bullet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="-5dp"
                    android:textSize="20sp"/>
                <com.oakraw.testmagnetic.custom.TextViewBullet
                    android:id="@+id/remain_bullet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

                </LinearLayout>

            </FrameLayout>

        <ImageView
            android:id="@+id/selected_gun"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/pistol"
            android:layout_marginLeft="10dp"/>
    </FrameLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cross_hair"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/blood_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blood_filter"
        android:scaleType="fitXY"/>

</FrameLayout>
